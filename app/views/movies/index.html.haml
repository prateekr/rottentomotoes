-#  This file is app/views/movies/index.html.haml
%h1 All Movie

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      - if @options == 'sort_by_title'
        %th{ :class => "hilite" }= link_to "Movie Title", movies_path(:options => 'sort_by_title'), :id => 'title_header'
      - else
        %th= link_to "Movie Title", movies_path(:options => 'sort_by_title'), :id => 'title_header'
      
      %th Rating

      - if @options == 'sort_by_date'
        %th{ :class => "hilite" }= link_to "Release Date", movies_path(:options => 'sort_by_date'), :id => 'release_date_header'
      - else
        %th= link_to "Release Date", movies_path(:options => 'sort_by_date'), :id => 'release_date_header'
      
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
    -form_tag
    - @all_ratings.each do |rating|
      %tr
        %td=rating
        %td=rating
        %td=rating
        %td=rating

= link_to 'Add new movie', new_movie_path
